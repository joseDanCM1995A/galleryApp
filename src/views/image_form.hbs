<div class="row">
    <div class="col-md-4 mr-auto">
        <div class="card">
            <div class="card-header text-center">
                Agregar imagen
            </div>
            <div class="card-body">
                <form  action="/images/add" method="POST" enctype="multipart/form-data">
                    <div class="form-group ">
                        <input type="text" name="title" class="form-control" id="" placeholder="Titulo:" >
                    </div>
                    <div class="form-group">
                        <input type="text" name="description" class="form-control" id="" placeholder="DescripciÃ³n">
                    </div>
                    <div class="input-group mb-3">
                        <div class="custom-file">
                            <input type="file" name="image" class="custom-file-input" id="inputGroupFile01">
                            <label class="custom-file-label" for="inputGroupFile01">Choose file</label>
                        </div>
                    </div>
                    <div class="text-center">
                        <button type="submit" class="btn btn-outline-primary">Agregar</button>
                    </div>
            </form>
            </div>
        </div>
    </div>
    <div class="col-md-8 d-flex flex-column align-items-center">
        {{#each allImages}}
            <div class="card w-75 mb-4 ">
                <div class="card-body ">
                    <h5 class="card-title">{{title}}</h5>
                    <p class="card-text">{{description}}</p>
                    <div  class="text-center" >
                        <a href="/images/view/{{_id}}" class="btn btn-success">Ver imagen</a>
                        {{!-- pasando el id de la imaen, pero del cloudinary --}}
                        <a href="/images/delete/{{_id}}" class="btn btn-danger">Eliminar</a>
                    </div>
                </div>
            </div>
        {{/each}}
    </div>
</div>